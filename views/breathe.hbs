<body>
  <div class="parallax">
    <header class="text-center">
      <div class="circle"></div>
      <h1><time>00:00</time></h1>
    </header>
  </div>

  <div class="section first-section">
    <div class="container">
      <div class="row justify-content-around text-center align-items-center">
        <div class="col-12 col-sm-10 col-med-8 col-lg-5">
        </div>
      </div>
    </div>
  </div>

  <div class="section second-section">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-12 col-sm-10 col-med-8 col-lg-5">
        </div>
      </div>
    </div>
  </div>
</body>

<style>
.parallax {
  background-image: linear-gradient(#ac96e0, #96cde0);
  min-height: 400px;
  margin-top: 35px;
  padding: 12em 0 10em 0;
  width: 100%;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.section {
  padding: 60px 0 40px 0;
  margin: 2em 0;
}

.first-section {
  background-image: linear-gradient(#96e09a, #f9f1b1);
  width: 100%;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.second-section {
  background-image: linear-gradient(#efca8f, #ef908f);
  margin-bottom: 10px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.circle {
  height: 100px;
  width: 100px;
  border-radius: 50%;
  background-image: radial-gradient(#9bdcff, #eaf7ff);
  animation: circle 4s ease alternate infinite;
}

@keyframes circle {
  0% { transform: translate(0, 0); }
  100% { transform: scale(4); }
}

</style>
<script>
  var h1 = document.getElementsByTagName('h1')[0], seconds = 0, minutes = 0, t;

  function add() {
      seconds++;
      if (seconds >= 60) {
          seconds = 0;
          minutes++;
          if (minutes >= 60) {
              minutes = 0;
          }
      }

      h1.textContent = (minutes ? (minutes > 9 ? minutes : "0" + minutes) : "00") + ":" + (seconds > 9 ? seconds : "0" + seconds);
      timer();
  }

  function timer() {
      t = setTimeout(add, 1000);
  }
  timer();
</script>

</div>
